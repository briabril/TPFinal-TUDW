{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@tpfinal/api/*": [
        "packages/api/*"
      ],
      "@tpfinal/schemas/*": [
        "packages/schemas/*"
      ],
      "@tpfinal/types/*": [
        "packages/types/*"
      ],
      "@tpfinal/context/*": [
        "packages/context/*"
      ],
      "@tpfinal/ui/*": [
        "packages/ui/*"
      ],
      "@/*": [
        "frontend/src/*"
      ]
    }
  },
  "include": [
    "frontend",
    "backend",
    "packages"
  ],
  "extends": "expo/tsconfig.base"
}
