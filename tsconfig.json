{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@tpfinal/api/*": ["packages/api/*"],
      "@tpfinal/schemas/*": ["packages/schemas/*"],
      "@tpfinal/types/*": ["packages/types/*"],
      "@/*": ["frontend/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./packages/types"
    ]
  },
  "include": [
    "frontend",
    "backend",
    "packages",
    "packages/types/global.d.ts"
  ]
}
